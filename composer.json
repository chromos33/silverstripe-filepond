{
    "name": "chromos33/silverstripe-filepond",
    "description": "Use FilePond fields in SilverStripe",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "FilePond",
        "upload",
        "form",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "LeKoala",
            "email": "thomas@lekoala.be"
        }
    ],
    "require": {
        "php": ">=7.1",
        "silverstripe/framework": "^4",
        "silverstripe/assets": "^1.6",
        "silverstripe/versioned": "^1.6"
    },
    "require-dev": {
        "sminnee/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "extra": {
        "installer-name": "filepond",
        "expose": [
            "javascript"
        ]
    },
    "autoload": {
        "psr-4": {
            "chromos33\\FilePond\\": "src/",
            "chromos33\\FilePond\\Test\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-filepond/issues"
    },
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/",
        "test": "phpunit -v",
        "build": "php bin/download-cdn-files.php"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
